{% extends "base.njk" %}

{% block main %}
    <main>
        <div class="container text-center mx-auto py-12 md:py-16">
            {% block header %}
            <h1 class="font-serif text-2xl uppercase tracking-widest border-b inline-block mx-auto pb-8">{{title}}</h1>
            {% endblock %}

            {% block content %}
            <div class="px-8 lg:w-2/3 mx-auto leading-relaxed longform text-lg py-12">
                {{ content | safe }}
            </div>
            {% endblock %}

            {% block after_content %}{% endblock %}
        </div>
    </main>
{% endblock %}